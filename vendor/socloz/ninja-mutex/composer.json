{
    "name": "arvenil/ninja-mutex",
    "description": "Simple to use mutex implementation that can use flock, memcache, memcached or mysql for locking",
    "homepage" : "https://github.com/arvenil/ninja-mutex",
    "keywords" : ["mutex", "lock", "locking", "flock", "memcache", "memcached", "mysql"],
    "license": "MIT",
    "authors": [
        {
            "name": "Kamil Dziedzic",
            "email": "arvenil@klecza.pl"
        }
    ],
    "autoload": {
        "psr-0": {
            "NinjaMutex": "src/"
        }
    },
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "mikey179/vfsStream": "v1.1.0",
        "ext-memcache": "*",
        "ext-memcached": "*",
        "ext-pdo_mysql": "*"
    },
    "suggest" : {
        "ext-memcache": "Create mutex using memcache extension",
        "ext-memcached": "Create mutex using memcached extension",
        "ext-pdo_mysql": "Create mutex using MySql"
    }
}
